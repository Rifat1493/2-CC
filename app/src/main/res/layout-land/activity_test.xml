<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdullahal_munzir.a2_cc.HexActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:weightSum="100">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@drawable/toggle_background"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button_complement2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_span="5"
                android:background="@drawable/compl_on"
                android:fontFamily="sans-serif-condensed"
                android:foreground="@drawable/ripple_effect_mode"
                android:stateListAnimator="@null"
                android:text="Complement"
                android:textColor="@android:color/background_light"
                android:textSize="17dp" />

            <Button
                android:id="@+id/button_conversion2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:layout_span="5"
                android:background="@drawable/conv_off"
                android:fontFamily="sans-serif-condensed"
                android:foreground="@drawable/ripple_effect_mode"
                android:stateListAnimator="@null"
                android:text="Conversion"
                android:textColor="#ff00ddff"
                android:textSize="17dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/inp_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_span="10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/decimal_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Decimal"
                    android:textAlignment="viewStart"
                    android:textColor="@color/radio1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/binary_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Binary"
                    android:textAlignment="viewStart"
                    android:textColor="@color/radio1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/octal_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Octal"
                    android:textAlignment="viewStart"
                    android:textColor="@color/radio1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/hex_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Hex-decimal"
                    android:textAlignment="viewStart"
                    android:textColor="@color/radio1"
                    android:textSize="16sp" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="7.5"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/input2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/inp_radio_group"
                android:layout_marginTop="0dp"
                android:layout_span="10"
                android:background="@drawable/border2"
                android:fontFamily="sans-serif-condensed"
                android:gravity="bottom|right"
                android:hint="Input"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:theme="@android:style/Theme.Holo.Light" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/output2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input"
                android:layout_span="10"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right|center_vertical"
                android:hint="Result"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:theme="@android:style/Theme.Holo.Light" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/out_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/output"
                android:layout_span="10"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/out_decimal_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Decimal"
                    android:textAlignment="viewStart"
                    android:textColor="#FF00DDFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/out_binary_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Binary"
                    android:textAlignment="viewStart"
                    android:textColor="#FF00DDFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/out_octal_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Octal"
                    android:textAlignment="viewStart"
                    android:textColor="#FF00DDFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/out_hex_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:soundEffectsEnabled="true"
                    android:text="Hex-decimal"
                    android:textAlignment="viewStart"
                    android:textColor="#FF00DDFF"
                    android:textSize="16sp" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="15"
            android:background="@android:color/white"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="7"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="8"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="9"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonA3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="A"

                android:textColor="#000000"
                android:textSize="22sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonD2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="d"
                android:textColor="#000000"
                android:textSize="22sp"
                android:typeface="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="@android:color/white"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="4"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="5"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="6"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonB3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="B"
                android:textColor="#000000"
                android:textSize="22sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonE2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="e"
                android:textColor="#000000"
                android:textSize="22sp"
                android:typeface="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="@android:color/white"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="1"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="2"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="3"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonC3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="C"
                android:textColor="#000000"
                android:textSize="22sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonF2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="f"
                android:textColor="#000000"
                android:textSize="22sp"
                android:typeface="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="@android:color/white"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="0"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonminus2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="-"
                android:textColor="#000000"
                android:textSize="23sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonClear2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:stateListAnimator="@null"
                android:text="clear"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonBackspace3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect"
                android:foreground="@drawable/finalback"
                android:stateListAnimator="@null"
                android:textColor="#000000"
                android:textSize="25dp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonCal2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_span="2"
                android:background="@drawable/ripple_effect_cal"
                android:stateListAnimator="@null"

                android:text="cal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:typeface="monospace" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
