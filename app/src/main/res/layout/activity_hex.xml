<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdullahal_munzir.a2_cc.HexActivity">

    <EditText
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:id="@+id/input_hex"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Input hexadecimal"
        android:theme="@android:style/Theme.Holo.Light"
        android:layout_height="45dp"
        android:background="#a5ffd8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="textNoSuggestions"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="19sp" />

    <TextView
        android:text="Result in Binary"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/out_hex_bin"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#f4de97"
        android:layout_below="@+id/input_hex"
        android:layout_alignEnd="@+id/input_hex"
        android:layout_alignStart="@+id/input_hex"
        android:layout_height="60dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Result in Hexadecimal"
        android:layout_width="wrap_content"
        android:id="@+id/out_hex_hex"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/holo2"
        android:layout_below="@+id/out_hex_bin"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/out_hex_bin"
        android:layout_alignStart="@+id/out_hex_bin"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:text="Calculate"
        android:radius="10dp"
        android:id="@+id/calc_hex"
        android:elevation="2dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/out_hex_hex"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold" />

</RelativeLayout>
